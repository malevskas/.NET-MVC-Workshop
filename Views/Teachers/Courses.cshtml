@model Final.Models.Teacher

@{
    ViewData["Title"] = "Courses";
}

<h1>Листа на предмети</h1>
<h4>@Html.DisplayFor(model => model.FullName)</h4>

<table class="table">
    <thead>
        <tr>
            <th>Име</th>
            <th>Кредити</th>
            <th>Семестар</th>
            <th>Насока</th>
            <th>Степен</th>
            <th>Прв наставник</th>
            <th>Втор наставник</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Courses1)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Credits)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Semester)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Program)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EducationLevel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstTeacher.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SecondTeacher.FullName)
                </td>
                <td>
                    <a asp-action="Enrollments" asp-route-id="@Model.Id" asp-route-courseid="@item.Id" asp-route-year="2021">Студенти</a>
                </td>
            </tr>
        }
        @foreach (var item in Model.Courses2)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Credits)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Semester)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Program)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EducationLevel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstTeacher.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SecondTeacher.FullName)
                </td>
                <td>
                    <a asp-action="Enrollments" asp-route-id="@Model.Id" asp-route-courseid="@item.Id" asp-route-year="2021">Студенти</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index">Назад кон листата</a>