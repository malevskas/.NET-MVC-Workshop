@model Final.Models.Enrollment

@{
    ViewData["Title"] = "Details";
}

<h1>Детали</h1>

<div>
    <h4>Запишан студент</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Предмет</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Title)
        </dd>
        <dt class="col-sm-2">Студент</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.FullName)
        </dd>
        <dt class="col-sm-2">Семестар</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Semester)
        </dd>
        <dt class="col-sm-2">Година</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class="col-sm-2">Оцена</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Grade)
        </dd>
        <dt class="col-sm-2">Линк од колоквиум</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SeminalUrl)
        </dd>
        <dt class="col-sm-2">Линк од проект</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProjectUrl)
        </dd>
        <dt class="col-sm-2">Вкупно поени</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExamPoints)
        </dd>
        <dt class="col-sm-2">Поени од колоквиум</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SeminalPoints)
        </dd>
        <dt class="col-sm-2">Поени од проект</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProjectPoints)
        </dd>
        <dt class="col-sm-2">Дополнителни поени</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AdditionalPoints)
        </dd>
    </dl>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="DetailsEnrollment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group" style="display: none;">
                <label asp-for="CourseId" class="control-label">Предмет</label>
                <select asp-for="CourseId" class="form-control" asp-items="ViewBag.CourseId"></select>
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none;">
                <label asp-for="StudentId" class="control-label">Студент</label>
                <select asp-for="StudentId" class="form-control" asp-items="ViewBag.StudentId"></select>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none;">
                <label asp-for="Semester" class="control-label">Семестар</label>
                <input asp-for="Semester" class="form-control" />
                <span asp-validation-for="Semester" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none;">
                <label asp-for="Year" class="control-label">Година</label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none;">
                <label asp-for="Grade" class="control-label">Оцена</label>
                <input asp-for="Grade" class="form-control" />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none;">
                <label asp-for="SeminalUrl" class="control-label">Линк од колоквиум</label>
                <input asp-for="SeminalUrl" class="form-control" />
                <span asp-validation-for="SeminalUrl" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none;">
                <label asp-for="ProjectUrl" class="control-label">Линк од проект</label>
                <input asp-for="ProjectUrl" class="form-control" />
                <span asp-validation-for="ProjectUrl" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none;">
                <label asp-for="ExamPoints" class="control-label">Вкупно поени</label>
                <input asp-for="ExamPoints" class="form-control" />
                <span asp-validation-for="ExamPoints" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none;">
                <label asp-for="SeminalPoints" class="control-label">Поени од колоквиум</label>
                <input asp-for="SeminalPoints" class="form-control" />
                <span asp-validation-for="SeminalPoints" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none;">
                <label asp-for="ProjectPoints" class="control-label">Поени од проект</label>
                <input asp-for="ProjectPoints" class="form-control" />
                <span asp-validation-for="ProjectPoints" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none;">
                <label asp-for="AdditionalPoints" class="control-label">Дополнителни поени</label>
                <input asp-for="AdditionalPoints" class="form-control" />
                <span asp-validation-for="AdditionalPoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FinishDate" class="control-label">Датум на положување</label>
                <input asp-for="FinishDate" class="form-control" />
                <span asp-validation-for="FinishDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зачувај" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Students" asp-route-id="@Model.CourseId">Назад кон листата</a>
</div>
