@model Final.Models.Course

@{
    ViewData["Title"] = "Delete";
}

<h1>Избриши</h1>

<h3>Дали сте сигурни?</h3>
<div>
    <h4>Предмет</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Име</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">Кредити</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Credits)
        </dd>
        <dt class = "col-sm-2">Семестар</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Semester)
        </dd>
        <dt class = "col-sm-2">Насока</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Program)
        </dd>
        <dt class = "col-sm-2">Степен</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EducationLevel)
        </dd>
        <dt class = "col-sm-2">Прв наставник</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstTeacher.FullName)
        </dd class>
        <dt class = "col-sm-2">Втор наставник</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SecondTeacher.FullName)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Избриши" class="btn btn-danger" /> |
        <a asp-action="Index">Назад кон листата</a>
    </form>
</div>
